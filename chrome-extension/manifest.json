{
  "manifest_version": 3,
  "name": "YouTube Playlist Downloader Pro",
  "version": "1.0.0",
  "description": "Professional YouTube playlist downloader with guaranteed audio quality",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "downloads"
  ],
  
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*",
    "*://youtu.be/*",
    "*://music.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": [
      "*://www.youtube.com/*",
      "*://youtube.com/*",
      "*://youtu.be/*",
      "*://music.youtube.com/*"
    ],
    "js": ["content.js"],
    "css": ["content.css"]
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Playlist Downloader Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [{
    "resources": ["content.css", "inject.js"],
    "matches": ["*://www.youtube.com/*", "*://youtube.com/*"]
  }]
}